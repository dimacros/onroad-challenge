{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/bus/src",
  "monorepo": true,
  "root": "apps/bus",
  "compilerOptions": {
    "plugins": ["@nestjs/swagger"],
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/bus/tsconfig.app.json"
  },
  "projects": {
    "bus": {
      "type": "application",
      "root": "apps/bus",
      "entryFile": "main",
      "sourceRoot": "apps/bus/src",
      "compilerOptions": {
        "tsConfigPath": "apps/bus/tsconfig.app.json"
      }
    }
  }
}